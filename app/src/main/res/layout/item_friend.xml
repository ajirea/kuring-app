<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="@dimen/base"
    app:cardBackgroundColor="@color/dark_light"
    app:cardCornerRadius="12dp"
    app:cardElevation="10dp"
    android:clickable="true"
    app:rippleColor="@color/gray1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/xs">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/itemThumbnail"
            android:layout_width="50dp"
            android:layout_height="50dp"
            tools:src="@drawable/avatar"
            app:shapeAppearanceOverlay="@style/Theme.Kuring.Avatar"
            android:scaleType="centerCrop"
            app:strokeWidth="2dp"
            android:padding="2dp"
            app:strokeColor="@color/purple"
            android:layout_marginBottom="8dp"
            />
        <TextView
            android:id="@+id/itemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            style="@style/Theme.Kuring.TitleSm"
            android:textSize="@dimen/sm_size"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="John Doe"/>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>