<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    app:cardCornerRadius="@dimen/xs"
    app:cardElevation="10dp"
    app:cardBackgroundColor="@color/dark"
    android:layout_margin="@dimen/xl3">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingHorizontal="@dimen/xl3"
        android:paddingTop="@dimen/base"
        android:paddingBottom="@dimen/xl3">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Theme.Kuring.TitleSm"
            android:layout_marginBottom="@dimen/base"
            android:text="Tentang Aplikasi"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/splashIcon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_splash" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/app_name"
                android:textColor="@color/gray2"
                android:textSize="24sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/splashIcon"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/textAppVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/xl3"
            android:fontFamily="@font/poppins"
            android:textColor="@color/gray2"
            android:textSize="12sp"
            tools:text="Version 1.0" />

        <Button
            android:id="@+id/btnCloseDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/xl3"
            android:minWidth="150dp"
            android:text="Tutup"
            style="@style/Theme.Kuring.Button"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>