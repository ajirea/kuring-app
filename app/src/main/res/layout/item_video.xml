<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/musicItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/xs"
    android:clickable="true"
    app:cardBackgroundColor="@color/dark_light"
    app:cardCornerRadius="12dp"
    app:cardElevation="10dp"
    app:rippleColor="@color/gray1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/xs">
        <View
            android:id="@+id/itemThumbnail"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/ic_video"
            android:layout_marginEnd="@dimen/xs"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/itemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Theme.Kuring.TitleSm"
                android:textSize="@dimen/general_size"
                tools:text="Damai Bersamamu"
                android:ellipsize="end"
                android:singleLine="true"
                android:lineSpacingExtra="0dp"/>
            <TextView
                android:id="@+id/itemCreator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Theme.Kuring.TextGeneral"
                android:textSize="@dimen/sm_size"
                tools:text="Chrisye"
                android:ellipsize="end"
                android:singleLine="true"/>
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>